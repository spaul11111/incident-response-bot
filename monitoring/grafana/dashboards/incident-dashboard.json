{
  "dashboard": {
    "id": null,
    "title": "Incident Response Bot Dashboard",
    "tags": ["incident-response", "devops"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Incidents",
        "type": "stat",
        "targets": [
          {
            "expr": "active_incidents",
            "format": "time_series",
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 3
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Incidents by Severity",
        "type": "piechart",
        "targets": [
          {
            "expr": "incidents_by_severity",
            "format": "time_series",
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Incident Resolution Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(incident_resolution_time_minutes_sum[5m]) / rate(incident_resolution_time_minutes_count[5m])",
            "format": "time_series",
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Slack Commands Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(slack_commands_total[5m])",
            "format": "time_series",
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
