{
  "name": "incident-response-bot",
  "version": "1.0.0",
  "description": "A Slack bot for incident response management with monitoring integration",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "build": "tsc",
    "watch": "nodemon --exec ts-node src/app.ts",
    "test": "ts-node src/test.ts",
    "test:components": "ts-node src/test.ts",
    "lint": "echo 'Linting would run here'",
    "docker:build": "docker build -t incident-response-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "monitoring:up": "docker-compose up prometheus grafana node_exporter -d",
    "monitoring:down": "docker-compose down",
    "k8s:deploy": "./scripts/deploy-to-minikube.sh",
    "k8s:cleanup": "./scripts/cleanup-minikube.sh",
    "k8s:logs": "kubectl logs -f deployment/incident-response-bot -n bot",
    "k8s:port-forward": "kubectl port-forward svc/incident-response-bot 3000:3000 -n bot"
  },
  "keywords": [
    "slack",
    "incident-response",
    "devops",
    "monitoring",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^4.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
